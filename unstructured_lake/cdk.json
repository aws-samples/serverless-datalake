      "dynamodb_use_provisioned": false,
      "dynamodb_read_capacity": 5,
      "dynamodb_write_capacity": 5,
      "embed_model_id": "amazon.titan-embed-text-v2:0",
      "insight_model_id": "global.anthropic.claude-sonnet-4-5-20250929-v1:0",
      "ocr_model_id": "global.anthropic.claude-sonnet-4-5-20250929-v1:0",
      "vision_model_id": "global.anthropic.claude-sonnet-4-5-20250929-v1:0",
      "lambda_memory": 3008,
      "lambda_timeout": 600,
      "insight_lambda_timeout": 300,
      "document_processor_concurrency": null,
      "insight_extractor_concurrency": null,
      "chunk_size": 2048,
      "chunk_overlap": 204,
      "vector_dimensions": 1024,
      "top_k_results": 5,
      "cache_ttl_hours": 24,
      "presigned_url_expiry_minutes": 15,
      "max_document_size_mb": 100,
      "api_throttle_rate": 1000,
      "api_throttle_burst": 2000,
      "apprunner_cpu": "2048",
