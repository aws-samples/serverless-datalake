      "vision_model_id": "global.anthropic.claude-sonnet-4-5-20250929-v1:0",
      "lambda_memory": 10240,
      "lambda_timeout": 900,
      "insight_lambda_timeout": 300,
      "document_processor_concurrency": 10,
      "insight_extractor_concurrency": 20,
      "chunk_size": 2048,
      "chunk_overlap": 204,
      "vector_dimensions": 1024,
      "top_k_results": 10,
      "cache_ttl_hours": 24,
      "presigned_url_expiry_minutes": 15,
      "max_document_size_mb": 100,
      "api_throttle_rate": 5000,
      "api_throttle_burst": 10000,
      "apprunner_cpu": "4096",
      "apprunner_memory": "8192",
      "apprunner_min_instances": 2,
      "apprunner_max_instances": 25,
      "cognito_user_pool_name": "doc-insight-users-prod",
      "cognito_client_name": "doc-insight-client-prod",
      "cognito_mfa_enabled": true,
      "log_level": "WARN",
      "enable_xray_tracing": true,
      "cost_center": "Engineering",
      "owner": "Platform Team"
    }
  }
}
